<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relative_layout_checkout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_checkout_subtotal_label"
            android:text="Subtotal:"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_view_checkout_header_price"
            android:layout_toRightOf="@+id/text_view_checkout_subtotal_label"
            android:layout_marginLeft="5dp"
            android:text="Rs 200"
            android:layout_alignBottom="@+id/text_view_checkout_subtotal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ListView
        android:id="@+id/list_view_checkout_items"
        android:layout_below="@+id/relative_layout_checkout_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>
</RelativeLayout>