<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_layout_order_cart_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borders">

        <TextView
            android:id="@+id/txt_cart_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="Order Cart"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_order_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout_order_cart_header"
        android:layout_marginTop="2dp"
        android:background="@drawable/borders"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingLeft="30dp"
            android:text="Monday - XYZ Thali (\u20B9 150)" />

        <CheckBox
            android:id="@+id/checkBox_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txt_monday"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp" />

        <TextView
            android:id="@+id/txt_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_monday"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:text="Tuesday - XYZ Thali (\u20B9 150)" />

        <CheckBox
            android:id="@+id/checkBox_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txt_tuesday"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp" />

        <TextView
            android:id="@+id/txt_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_tuesday"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:text="Wednesday - XYZ Thali (\u20B9 150)" />

        <CheckBox
            android:id="@+id/checkBox_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txt_wednesday"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp" />

        <TextView
            android:id="@+id/txt_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_wednesday"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:text="Thursday - XYZ Thali (\u20B9 150)" />

        <CheckBox
            android:id="@+id/checkBox_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txt_thursday"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp" />

        <TextView
            android:id="@+id/txt_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_thursday"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:text="Friday - XYZ Thali (\u20B9 150)" />

        <CheckBox
            android:id="@+id/checkBox_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txt_friday"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp" />

        <TextView
            android:id="@+id/txt_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_friday"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:text="Saturday - XYZ Thali (\u20B9 150)" />

        <CheckBox
            android:id="@+id/checkBox_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/txt_saturday"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_layout_notes_to_kitchen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout_order_cart"
        android:background="@drawable/borders"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/text_view_notes_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:text="Notes to Kitchen"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>


        <EditText
            android:id="@+id/edit_text_notes"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/text_view_notes_header"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="42dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_border"
            android:hint="Please bring order before 2pm I have a meeting"
            android:paddingLeft="5dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_layout_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout_notes_to_kitchen">

        <TextView
            android:id="@+id/text_view_quantity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button_minus"
            android:layout_marginLeft="20dp"
            android:text="Quantity"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@+id/text_view_quantity_label"
            android:padding="0dp"
            android:text="-" />

        <EditText
            android:id="@+id/edit_text_quantity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/button_minus"
            android:layout_toRightOf="@+id/button_minus" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/edit_text_quantity"
            android:padding="0dp"
            android:text="+" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout_quantity">

        <TextView
            android:id="@+id/text_view_total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Total Amount"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_view_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/text_view_total_label"
            android:text="\u20B9 200"
            android:textSize="20dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_finalize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout_total"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Order" />


    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/rajatdeshpande/Documents/workspace/ParseStarterProject/res/layout/custom_dialog_2.xml -->