<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/corp_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/food1" />
    <TextView
        android:id="@+id/weekday_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:text="Monday"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/check_mark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:src = "@drawable/check_on"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/menuholder"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:background="#c0000000"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id = "@+id/menu_item1"
            android:background="#FFF5A12C"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id = "@+id/menu_item2"
            android:background="#FFF5A12C"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id = "@+id/menu_item3"
            android:background="#FFF5A12C"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id = "@+id/menu_item4"
            android:background="#FFF5A12C"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id = "@+id/menu_item5"
            android:background="#FFF5A12C"
            android:layout_margin="8dp"/>
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/rajatdeshpande/Documents/workspace/ParseStarterProject/res/layout/fragment_foodie_toh.xml -->